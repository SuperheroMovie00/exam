            _html += "<li>";
            _html += "<i class=\"iconfont" + (list[k]['children'] == 0 ? " no-child" : "") + "\"><a href=\"javascript:void(0);\" onclick=\"<?php echo $funcid; ?>_load_bom(" + list[k]["id"] + ", " + list[k]["goods_id"] + ");\"></a></i>";
