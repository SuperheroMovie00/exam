            _html += "<div data-parent=\"parent-<?php echo $funcid;?>-" + list[k]["id"] + "\"></div>";
            _html += "</li>";
        }

        _html += "</ui>";
        _list.append(_html);
        if(typeof(r) != 'undefined' && r > 0) {
        <?php echo $funcid ?>_load_bom_info(parent_id, r);
        }
    }

