<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Image</title>
    <script type="text/javascript" src="../doc/asset/js/esl/esl.js"></script>
</head>
<body>
    <script type="text/javascript">
    require.config({
        packages: [
            {
                name: 'zrender',
                location: '../src',
                main: 'zrender'
            }
        ]
    });

    require([
        "zrender",
        'zrender/Group',
        'zrender/shape/Image',
        'zrender/shape/Circle'
    ], function(zrender, ImageShape, Group, CircleShape){

        // 初始化zrender
        var zr = zrender.init( document.getElementById("Main") );

        var group = new Group();
        zr.addGroup(group);

        var clipShape = new CircleShape({
            style: {
                r: 200,
                x: 0,
                y: 0
            },
            position: [200, 200]
        });

        group.clipShape = clipShape;

        for( var i = 0; i < 20; i ++){
            for( var j = 0; j < 20; j++){
                var image = new ImageShape({
                    position : [i * 50, j * 50],
                    scale : [1, 1],
                    style : {
                        x : 0,
                        y : 0,
                        image : "test.jpeg",
                        width : 50,
                        height : 50
                    },
                    draggable : true
                });
                group.addChild( image );
            }
        }

        zr.render();

    })
    </script>
    <div id="Main" style="width:1000px;height:600px;"></div>
</body>
</html>