{__NOLAYOUT__}
<div class="prompt-pop" data-type="selectProduct" id="<?php echo $funcid ?>" style="z-index: {$zindex}" funcid="{$funcid}" last-url="{$__last_url}">
    <div class="title">
        <span class="pop-name">导入商品分类</span>
        <a href="javascript:void(0);" onclick="$(this).parents('.prompt-pop').remove();_asr.closePopup('{$funcid}');" class="close iconfont">&#xe60d;</a>
    </div>
    <form action="{:U('/Home/Category/index?func=detail_import&close=1')}" method="post" id="<?php echo $funcid;?>-Category-import-Form" enctype="multipart/form-data">
        <input type="hidden" name="funcid" value="{$funcid}" />
        <input type="hidden" id="<?php echo $funcid;?>_check" name="check" value="1" />

        <input type="file" style="display:none;" id="<?php echo $funcid;?>_import_file"  name="import" onchange="<?php echo $funcid;?>_choose();"  />
    </form>

    <ul class="pbform">
        <li>
            <span class="tit">
            <em class="abe-red mrg_5"></em>商品分类模板
            </span>
            <div class="txt-box">
                <input type="text" id="<?php echo $funcid;?>_import" readonly class="pbtxt" onclick="$('#<?php echo $funcid;?>_import_file').click();" value="" />
                <input type="button" value="选择文件" class="btn btn-blue" onclick="$('#<?php echo $funcid;?>_import_file').click();">
            </div>
        </li>
        <li>
            <span class="tit">
            <em class="abe-red mrg_5"></em>检查分类存在
            </span>
            <div class="txt-box">
                <input type="checkbox" id="<?php echo $funcid;?>_check_style"  value="1" checked onclick="<?php echo $funcid;?>_checkStyleBox()" />
            </div>
        </li>
        <li>
            <span class="tit">
            <em class="abe-red mrg_5"></em>分类模板
            </span>
            <div class="txt-box">
                <a href="/Public/importTpl/category_import.csv">点击下载</a>
            </div>
        </li>
    </ul>

    <div class="pop-sub abe-txtc">
        <input type="submit" value="保存" class="btn btn-org mrg_10" onclick="return _asr.submit('<?php echo $funcid;?>', '<?php echo $funcid;?>-Category-import-Form', '{:U('/Home/Category/index?func=detail_import&close=1')}',2);">
    </div>
</div>
<script>
    function <?php echo $funcid ?>_init() {
        var _this = $("#<?php echo $funcid ?>");
        var ppw = _this.width()/2;
        _this.css({'margin-left':-ppw});
    }

    function <?php echo $funcid ?>_refresh() {
        _asr.submit('<?php echo $funcid;?>', $("#<?php echo $funcid ?>").find("form").eq(1), '');
    }

    function <?php echo $funcid;?>_choose(){
        $('#<?php echo $funcid;?>_import').val($('#<?php echo $funcid;?>_import_file').val())
    }

    function <?php echo $funcid;?>_checkStyleBox(){
        if($("#<?php echo $funcid;?>_check_style").is(':checked')){
            $("#<?php echo $funcid;?>_check").val(1)
        }else{
            $("#<?php echo $funcid;?>_check").val(0)
        }
    }

</script>